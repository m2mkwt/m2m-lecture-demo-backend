<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.m2m.instagram.mapper.PostMapper">
	<insert id="insertPost">
		insert into m2mDemoDB.dbo.post values (${memberidx},#{text},getDate())
	</insert>
	<delete id="deletePost">
		delete from dbo.post where idx = ${idx}
	</delete>
	<update id="updatePost">
		update dbo.post set text = #{text} where idx = ${idx}
	</update>
	<select id="selectPost" resultType="kr.co.m2m.instagram.model.PostVO">
		select * from m2mDemoDB.dbo.post where memberidx = ${memberidx}
	</select>
	<select id="selectPostDetail" resultType="kr.co.m2m.instagram.model.PostVO">
		select * from dbo.post where idx = ${idx}
	</select>
</mapper>


<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
 
<mapper namespace="kr.co.m2m.instagram.mapper.CommentMapper">
 
    <select id="commentCount" resultType="int">
        SELECT
            COUNT(*)
        FROM COMMENT
    </select>
    
    <select id="commentList" resultType="CommentVO">
        SELECT
            *
        FROM COMMENT
    </select>
    <insert id="commentInsert" parameterType="CommentVO">
        INSERT INTO
        COMMENT (CNO, BNO, CONTENT, WRITER, REG_DATE)
        VALUES(${comment_id},${member_id},${post_id},#{text},#{delete_yn},now()) 
    </insert>
    
    <update id="commentUpdate" parameterType="CommentVO">
        UPDATE COMMENT
            SET
            text = #{text}
        	WHERE post_id = ${post_id}
    </update>
    <update id="commentDelete" parameterType="CommentVO">
	    UPDATE COMMENT
	        SET
	        delete_yn = #{delete_yn}
	    	WHERE post_id = ${post_id}
    </update>
</mapper>
